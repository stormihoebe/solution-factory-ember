{{#if addNewAnswer}}
  <form>
    <div class="form-group">
      <label for="author">Name</label>
      {{input value=author id="author" required="required" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="content">Answer</label>
      {{input value=content id="content" class="form-control"}}
    </div>
    <button class="btn btn-warning" {{action 'saveAnswer'}}>Submit</button>
  </form>
{{else}}
<button class="btn btn-warning" {{action 'answerFormShow'}}>Submit Answer</button>
{{/if}}
